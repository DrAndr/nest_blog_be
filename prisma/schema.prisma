model Files {
  id            String @id @default(uuid())
  url           String @unique
  originalname  String
  name          String @unique
  mimetype      String

  meta        Json

  user        User @relation(fields: [userId], references: [id])
  userId      String

  isPrivate   Boolean @default(false) @map("is_private")

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("files")
}

enum UserRole {
  ADMIN
  MANAGER
  REGULAR
}

enum AuthMethod {
  CREDENTIALS
  GOOGLE
  YANDEX
}

enum TokenType {
  VERIFICATION
  PASSWORD_RESET
  TWO_FACTOR
}
